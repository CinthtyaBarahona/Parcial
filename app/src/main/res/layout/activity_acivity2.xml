<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Acivity2">

    <Button
            android:text="CAMBIAR FRAGMENTO"
            android:layout_width="106dp"
            android:layout_height="44dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="CambiarFragmento"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorAccent" android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_bias="0.259" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/reemplazar" app:layout_constraintVertical_bias="1.0"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="338dp"
            android:layout_height="600dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintVertical_bias="0.122" android:id="@+id/reemplazar">

    </android.support.constraint.ConstraintLayout>
    <ImageView
            android:layout_width="57dp"
            android:layout_height="58dp" app:srcCompat="@drawable/github"
            android:id="@+id/ImageGit" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/reemplazar" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="73dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:clickable="true"/>
</android.support.constraint.ConstraintLayout>